<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paul and Jeremy Autos Database</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/styles.css') }}">
</head>
<body>
    <header>
        <h1>Paul and Jeremy Autos Database</h1>
    </header>
    <nav>
        <a href="{{ url_for('root') }}">Cars</a>
        <a href="{{ url_for('customers') }}">Customers</a>
        <a href="{{ url_for('employees') }}">Employees</a>
        <a href="{{ url_for('transactions') }}">Transactions</a>
        <a href="{{ url_for('transaction_details') }}">Transaction Details</a>
        <a href="{{ url_for('transaction_types') }}">Transaction Types</a>
        <a href="{{ url_for('conditions') }}">Car Conditions</a>
    </nav>
    <hr class="rounded">
    
    <h2>Browse Customers</h2>
    <div class="table">
        <table>
            <tbody>
                <tr>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                    <th>Address Line 1</th>
                    <th>Address Line 2</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postal Code</th>
                    <th>Modify</th>
                </tr>
                {% for customer in data %}
                    <tr>
                        <td>{{ customer['customerID'] }}</td>
                        <td>{{ customer['customerName'] }}</td>
                        <td>{{ customer['emailAddress'] }}</td>
                        <td>{{ customer['phoneNumber'] }}</td>
                        <td>{{ customer['addressLine1'] }}</td>
                        <td>{{ customer['addressLine2'] }}</td>
                        <td>{{ customer['city'] }}</td>
                        <td>{{ customer['state'] }}</td>
                        <td>{{ customer['postalCode'] }}</td>
                        <td>
                            <a href="{{ url_for('edit_customer', customerID = customer['customerID']) }}">Edit</a>
                            <a href="{{ url_for('delete_customers', customerID = customer['customerID'])}}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <button class="create_button" onclick="window.location.href='{{ url_for('create_customers') }}'">Create Customer</button>
</body>
</html>