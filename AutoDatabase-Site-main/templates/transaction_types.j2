<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paul and Jeremy Autos Database</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/styles.css') }}">
</head>
<body>
    <header>
        <h1>Paul and Jeremy Autos Database</h1>
    </header>
    <nav>
        <a href="{{ url_for('root') }}">Cars</a>
        <a href="{{ url_for('customers') }}">Customers</a>
        <a href="{{ url_for('employees') }}">Employees</a>
        <a href="{{ url_for('transactions') }}">Transactions</a>
        <a href="{{ url_for('transaction_details') }}">Transaction Details</a>
        <a href="{{ url_for('transaction_types') }}">Transaction Types</a>
        <a href="{{ url_for('conditions') }}">Car Conditions</a>
    </nav>
    <hr class="rounded">

    <h2>Browse Transaction Types</h2>
    <div class="table">
        <table>
            <tbody>
                <tr>
                    <th>Transaction Type ID</th>
                    <th>Description</th>
                    <th>Modify</th>
                </tr>
                {% for type in data %}
                <tr>
                    <td> {{ type['transactionTypeID'] }}</td>
                    <td> {{ type['description'] }}</td>
                    <td>
                        <a href="{{ url_for('edit_type', transactionTypeID= type['transactionTypeID']) }}">Edit</a>
                        <a href="{{ url_for('delete_type', transactionTypeID= type['transactionTypeID']) }}">Delete</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <button class="create_button" onclick="window.location.href='{{ url_for('create_types') }}'">Create Types</button>

</body>
</html>
