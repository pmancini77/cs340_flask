    <hr class="rounded">

    <h2>Edit Employee</h2>
    <form action="/edit-employees/{{ employee['employeeID'] }}" method="post">
    <div class="table">
        <table>
            <tbody>
                <tr>
                    <th>Employee ID</th>
                    <th>Employee Name</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                </tr>
                <tr>
                    <td><input type="number" name="employeeID" value="{{employee['employeeID']}}"></td>
                    <td><input type="text" name="name" value="{{employee['employeeName']}}" required></td>
                    <td><input type="email" name="email" value="{{employee['emailAddress']}}" required></td>
                    <td><input type="number" name="number" value="{{employee['phoneNumber']}}" required></td>
                    <td>
                        <button type="submit">Apply Edit</button>
                        <a href="{{ url_for('employees') }}">Cancel</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    </form>

</body>
